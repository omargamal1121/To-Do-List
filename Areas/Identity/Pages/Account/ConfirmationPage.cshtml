@page
@model ConfirmationPageModel
@{
    ViewData["Title"] = "Number Input";
}

<h2 class="text-center mb-4 text-dark">Enter Validation Number</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="card p-4 shadow-sm">
                <div asp-validation-summary="All" class="text-danger"></div>

                <input type="hidden" name="email" value="@Model._email" />

                <div class="form-group">
                    <label asp-for="Input.Validation_Number" class="font-weight-bold">Validation Number:</label>
                    <input type="text" id="NumberInput" asp-for="Input.Validation_Number" class="form-control" required placeholder="Enter your validation number" />
                    <span asp-validation-for="Input.Validation_Number" class="text-danger small"></span>
                </div>

                <br>

                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg w-100">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f8f9fa;
    }

    .card {
        border: none;
        border-radius: 10px;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        transition: background-color 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .form-control {
        border-radius: 5px;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.25);
        }

    .text-danger {
        color: #dc3545 !important;
    }
</style>